<div class="row">
	<div class="span10 offset1">
		<table class="table">
			<thead>
				<th><%= @ship_class.faction %></th>
				<th><i><%= @ship_class.name %></i> class <%= @ship_class.classification %></th>
			</thead>
		</table>
	</div>
</div>
<div class="row">
	<div class="span8 offset2">
		<table class="table">
			<tbody>
				<tr>
					<td><small>Crew: <%= @ship_class.total_crew %> (<%= @ship_class.officers %> Officers, <%= @ship_class.enlisted %> Enlisted, <%= @ship_class.marines %> Marines)</small></td>
					<td><small>Small Craft: <% @ship_class.small_craft.each do |craft,count| %>
						<%= count %> <%= craft %>, 
						<% end %>
					</small></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="span4">
		<div class="panel panel-default">
			<div class="panel-heading">Forward Hammerhead</div>
			<div class="panel-body">
				<!-- this will need modified, could possibly be templated -->
				<div class="well well-small">
					fcon: <%= @ship_class.fore_fcon %>
					mag: <%= @ship_class.fore_mag %>
					missiles: <%= @ship_class.fore_missiles %>
					energy: <%= @ship_class.fore_energy %>
					CM: <%= @ship_class.fore_cm %>
					PD: <%= @ship_class.fore_pd %>
					decoys: <%= @ship_class.fore_decoy %>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		<div class="panel panel-default">
			<div class="panel-heading">Aft Hammerhead</div>
			<div class="panel-body">
				<!-- this will need modified, could possibly be templated -->
				<div class="well well-small">
					fcon: <%= @ship_class.aft_fcon %>
					mag: <%= @ship_class.aft_mag %>
					missiles: <%= @ship_class.aft_missiles %>
					energy: <%= @ship_class.aft_energy %>
					CM: <%= @ship_class.aft_cm %>
					PD: <%= @ship_class.aft_pd %>
					decoys: <%= @ship_class.aft_decoy %>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-title">
					Officers & Crew
				</div>
			</div>
			<div class="panel-body">
				<!-- this will need modified -->
				<div class="well well-small">
					Base Cost: <%= @ship_class.base_cost %>
				</div>
			</div>
		</div>
	</div>

</div>
<div class="row">
	<div class="span4">
		<div class="panel panel-default">
			<div class="panel-heading">Port Broadside</div>
			<div class="panel-body">
				<!-- this will need modified, could possibly be templated -->
