					CM: <%= @ship_class.port_cm %>
					PD: <%= @ship_class.port_pd %>
					decoys: <%= @ship_class.port_decoy %>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		<div class="panel panel-default">
			<div class="panel-heading">Starboard Broadside</div>
			<div class="panel-body">
				<!-- this will need modified, could possibly be templated -->
				<div class="well well-small">
					fcon: <%= @ship_class.star_fcon %>
					mag: <%= @ship_class.star_mag %>
					missiles: <%= @ship_class.star_missiles %>
